<UserControl x:Class="App_EmpresaDI.Controles.TextEntrada"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:App_EmpresaDI.Controles"
             mc:Ignorable="d" 
             d:DesignHeight="70" d:DesignWidth="500">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="5*"/>
        </Grid.ColumnDefinitions>

        <Image x:Name="img_Icono" Grid.Column="0"  Margin="5,5,0,5" />
        <TextBox x:Name="txtEntrada" Grid.Column="1"  />
    </Grid>
</UserControl>
